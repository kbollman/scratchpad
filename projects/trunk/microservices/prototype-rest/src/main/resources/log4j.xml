<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>

    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB"/>
        <param name="maxBackupIndex" value="10"/>
        <param name="File" value="log/proto-debug.log"/>
        <param name="threshold" value="trace"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%d{ISO8601} %-5p %-20.20t %-21.21c{1}] %X{context}%m%n"/>
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <param name="threshold" value="debug"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%d{ISO8601} %-5p %-20.20t %-21.21c{1}] %X{context}%m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework.retry.support.RetryTemplate">
        <level value="debug" />
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.springframework.boot.actuate.endpoint.mvc.EndpointHandlerMapping">
        <level value="warn" />
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.kevjim" additivity="false">
        <level value="debug"/>
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </logger>

    <root>
        <priority value="warn"/>
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
